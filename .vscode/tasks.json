{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "group": "build",
            "label": "release-ldc2",
            "type": "shell",
            "command": "dub",
            "args": [
                "run",
                "--compiler=ldc2",
                "--build=release",
                "--arch=x86_64",
                "--force"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": ["$msCompile"],
        },
        {
            "group": "build",
            "label": "debug-ldc2",
            "type": "shell",
            "command": "dub",
            "args": [
                "run",
                "--compiler=ldc2",
                "--build=debug",
                "--arch=x86_64",
                "--force"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": ["$msCompile"],
        }
    ]
}